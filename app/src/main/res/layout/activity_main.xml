
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="fill"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:background="#99CC00"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context="com.aquaJax.simplemasterdetailpattern.app.MainActivity">


    <fragment
        android:id="@+id/fragment_a"
        android:tag="fragment_a"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:name="com.aquaJax.simplemasterdetailpattern.app.FragmentA"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <fragment
        android:id="@+id/fragment_b"
        android:tag="fragment_b"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:name="com.aquaJax.simplemasterdetailpattern.app.FragmentB"
        android:layout_below="@+id/fragment_a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</LinearLayout>

